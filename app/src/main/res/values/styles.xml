    <style name="LogoText" parent="@style/Theme.AbstractApp">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Header1" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Subtitle" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InputBox" parent="TextAppearance.AppCompat">
        <item name="android:background">@null</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="InputLayouts" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
